# Runtime
NODE_ENV=production
APP_NAME=sigmacode-ai
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
NODE_OPTIONS=--max-old-space-size=1024
TZ=Europe/Berlin

# Server
PORT=3080
HOST=0.0.0.0
DOMAIN_SERVER=http://localhost:3081
CORS_ORIGINS=http://localhost:3092
VITE_API_TARGET=http://localhost:3081

# Add your environment variables here

# --- Sim (Workflow Engine) Integration ---
# Basis-URL der Sim-Instanz (Next.js App). Beispiel: http://sim:3000 oder http://localhost:3000
SIM_BASE_URL=
# Öffentliche WS/Socket URL (für Live-Status). Beispiel: ws://sim:3000 oder wss://sim.example.com
SIM_PUBLIC_WS_URL=
# Optional: API-Key/Token, falls Sim hinter Auth/Proxy geschützt ist
SIM_API_KEY=
# Optional: Gemeinsamer Issuer/Key zur Signierung von Calls aus LibreChat → Sim (JWT/JWE o.ä.)
SIM_SIGNING_SECRET=

# Container User (optional)
UID=502
GID=20

# Image (optional)
GHCR_IMAGE=ghcr.io/ORG/sigmacode-ai-api:latest

# Auth
JWT_SECRET=change-me-dev-jwt-secret
SESSION_SECRET=change-me-dev-session-secret
ALLOW_SOCIAL_LOGIN=true
ALLOW_REGISTRATION=true

# Database (MongoDB) – ONLINE (Atlas)
MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.example.mongodb.net/app?retryWrites=true&w=majority&appName=Cluster0
MONGO_URI=${MONGODB_URI}

# Redis
REDIS_URL=redis://redis:6379
REDIS_URI=redis://redis:6379
UPSTASH_REDIS_REST_URL=https://artistic-mako-43649.upstash.io
UPSTASH_REDIS_REST_TOKEN=YOUR_TOKEN

# Meilisearch
MEILI_HOST=http://meilisearch:7700
MEILI_INDEX=sigmacode
MEILI_MASTER_KEY=dev-meili-change-me

# IMAP
IMAP_HOST=imap.zoho.eu
IMAP_PORT=993
IMAP_USER=dmarc@sigmacode.ai
IMAP_PASS=change-me
IMAP_TLS=true

# API Keys
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY
GOOGLE_KEY=YOUR_GOOGLE_API_KEY
GROQ_API_KEY=YOUR_GROQ_API_KEY
MISTRAL_API_KEY=YOUR_MISTRAL_API_KEY
OPENROUTER_KEY=YOUR_OPENROUTER_API_KEY
PERPLEXITY_API_KEY=YOUR_PERPLEXITY_API_KEY
DEV_MODE=false

# OAuth
GITHUB_CLIENT_ID=YOUR_GITHUB_CLIENT_ID
GITHUB_CLIENT_SECRET=YOUR_GITHUB_CLIENT_SECRET

# Google OAuth
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_CALLBACK_URL=/api/oauth/google/callback
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID


# Turnstile (optional)
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# RAG
RAG_API_URL=http://localhost:3080

DOMAIN_SERVER=http://localhost:3081
DOMAIN_CLIENT=http://localhost:3092
CORS_ORIGINS=http://localhost:3092
VITE_API_TARGET=http://localhost:3081


